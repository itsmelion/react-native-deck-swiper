{
  "extends": [
    "config:base"
  ],
  "baseBranches": ["master", "main", "basic-swiper"],
  // "commitMessageSuffix": "[skip netlify]",
  // "commitBody": "[skip ci]",
  "requiredStatusChecks": null,
  "assignees": ["itsmelion"],
  "reviewers": ["itsmelion"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    // {
    //   "packagePatterns": [
    //     "*"
    //   ],
    //   "rangeStrategy": "pin"
    // },
    {
      "packageNames": ["typescript"],
      "rangeStrategy": "auto"
    },
    {
      "depTypeList": [
        "dependencies",
        "devDependencies"
      ],
      "rangeStrategy": "pin"
    },
    {
      "depTypeList": [
        "engines",
        "peerDependencies",
        "resolutions"
      ],
      "rangeStrategy": "widen"
    },
    {
      "depTypeList": [
        "optionalDependencies"
      ],
      "rangeStrategy": "auto"
    }
  ]
}
