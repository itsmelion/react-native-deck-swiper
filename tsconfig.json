{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/__tests__",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.story.ts",
    "**/*.story.tsx",
    "**/*.story.js",
    "**/*.story.jsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "**/*.stories.js",
    "**/*.stories.jsx",
    "./public",
    "./tmp",
    "./assets",
    "./dist",
    "./build",
  ]
}
